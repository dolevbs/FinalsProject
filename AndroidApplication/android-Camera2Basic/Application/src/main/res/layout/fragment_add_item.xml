<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.camera2basic.AddItemFragment"
    android:rowCount="5"
    android:columnCount="3"
    android:rowOrderPreserved="false">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date Scanned"
        android:id="@+id/textView"
        android:layout_row="2"
        android:layout_column="0" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Take Date Image"
        android:id="@+id/TakeDateImageButton"
        android:layout_row="2"
        android:layout_column="2" />

    <TextView
        android:layout_width="236dp"
        android:layout_height="39dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="BarCodeNumber"
        android:id="@+id/BarCodeNumberTextView"
        android:layout_row="3"
        android:layout_column="0" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Item"
        android:id="@+id/finalAddItemButton"
        android:layout_row="4"
        android:layout_column="0"
        android:layout_columnSpan="3" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan BarCode"
        android:id="@+id/BarCodeScanButton"
        android:layout_row="3"
        android:layout_column="2" />
</GridLayout>
